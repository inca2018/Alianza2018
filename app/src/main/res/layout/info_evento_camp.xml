<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fb">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/blanco"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"

        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información de Evento :"
        android:textColor="@color/ColorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/ColorAccent"
            >

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nombre de Evento:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha de Inicio:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha de Fin:"
                android:textColor="@color/negro"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cantidad de Fechas:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Usuario Creador:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Equipo Asignado:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha de Creación de Evento:"
                android:textColor="@color/negro"
                android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:id="@+id/info_ev_nom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nombre de Evento:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:id="@+id/info_ev_inicio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha de Inicio:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:id="@+id/info_ev_fin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha de Fin:"
                android:textColor="@color/negro"
                android:gravity="center"/>

            <TextView
                android:id="@+id/info_ev_cantidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cantidad de Fechas:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:id="@+id/info_ev_creador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Usuario Creador:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:id="@+id/info_ev_equipo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Equipo Asignado:"
                android:textColor="@color/negro"
                android:gravity="center"/>
            <TextView
                android:id="@+id/info_ev_f_creacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha de Creación de Evento:"
                android:textColor="@color/negro"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>