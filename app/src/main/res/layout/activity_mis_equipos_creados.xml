<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="inca.jesus.alianza17.Activities.MisEquiposCreados"
    android:background="@color/blanco">


    <LinearLayout
        android:id="@+id/linear_mis_equipos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="AÃºn no ha creado un equipo!"
                   android:textSize="18sp"
                   android:textColor="@color/negro"
                   android:textStyle="bold"
                   android:layout_margin="20dp"/>
               <android.support.v7.widget.CardView
                   android:id="@+id/card_crear_mi_equipo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:cardCornerRadius="5dp"
                   android:layout_margin="10dp"
                   android:backgroundTint="@color/colorPrimary">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="CREAR EQUIPO"
                       android:textSize="18sp"
                       android:textColor="@color/blanco"
                       android:textStyle="bold"
                       android:layout_margin="10dp"/>


               </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_mis_equipos"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>
