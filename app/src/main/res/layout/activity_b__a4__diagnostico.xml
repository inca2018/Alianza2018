<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_valorar__habilidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/blanco"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EVALUACION:"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/colorSecundario"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:text="CAPACIDADES:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/colorSecundario"
            android:textStyle="bold"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/morado_bajo"
            android:elevation="5sp"
            android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:text="FISICO"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/btn_fisico2"
                android:onClick="fisico"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntaje:"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/pto_fisico"
                    android:textColor="@color/blanco"/>


            </LinearLayout>


        </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/morado_bajo"
            android:elevation="5sp"
            android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:text="CAPACIDAD DE JUEGO"
                android:textStyle="bold"
                android:textSize="23dp"
                android:id="@+id/btn_capacidad2"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntaje:"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/pto_capacidad"
                    android:textColor="@color/blanco"/>


            </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/morado_bajo"
            android:elevation="5sp"
            android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:text="SOCIAL"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/btn_social2"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntaje:"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/pto_social"
                    android:textColor="@color/blanco"/>


            </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/morado_bajo"
            android:elevation="5sp"
            android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:text="TECNICO"
                android:id="@+id/btn_tecnico2"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntaje:"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/pto_tecnico"
                    android:textColor="@color/blanco"/>


            </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/morado_bajo"
            android:elevation="5sp"
            android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:text="PSICOLOGICO"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/btn_psicologico2"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puntaje:"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/pto_psicolo"
                    android:textColor="@color/blanco"/>


            </LinearLayout>


        </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        app:cardBackgroundColor="@color/verde_bajo"
        android:elevation="5sp"
        android:layout_margin="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/EvaluarID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:onClick="guardar_diagnostico"
            android:text="Guardar Resultado"
            android:textColor="@color/blanco"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/verde_bajo">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blanco"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/total_ptos"
                android:textColor="@color/blanco"/>


        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

