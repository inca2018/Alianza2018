<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardUsedCompatPadding="true"
    card_view:elevation="20dp"
    card_view:cardCornerRadius="60dp"
    android:backgroundTint="@color/blanco"
    android:layout_margin="2dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            xmlns:tools="http://schemas.android.com/tools"
            card_view:cardUsedCompatPadding="true"
            card_view:cardCornerRadius="100dp"
            android:backgroundTint="@color/blanco"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/card_cate_nom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Nombres de Jugador"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"

                    />
                    <TextView
                        android:id="@+id/card_cate_creador"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Usuario"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/card_cate_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Fecha Creacion: 1838388"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:background="@color/fb"
                    >
                <LinearLayout
                    android:id="@+id/card_cate_editar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/iconos_ancho"
                        android:layout_height="@dimen/iconos_altura"
                        android:src="@mipmap/ic_edit_icon"
                        android:layout_gravity="center"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Jugadores"
                        android:textSize="8dp"
                        android:gravity="center"/>

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/card_cate_eliminar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/iconos_ancho"
                            android:layout_height="@dimen/iconos_altura"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_delete_icon"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Eliminar"
                            android:textSize="8dp"
                            android:gravity="center"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v7.widget.CardView>