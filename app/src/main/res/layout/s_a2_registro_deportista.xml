<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.A2_RegistroDeportista"
    android:orientation="vertical"
    android:background="@color/fb">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_seguimiento"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            tools:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_boton_volver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:src="@drawable/ic_boton_regresar"
                    />
                <TextView
                    android:id="@+id/toolbar_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="REGISTRO DE POSTULANTE"
                    android:textSize="15dp"
                    android:textColor="@color/blanco"
                    android:gravity="left"
                    android:padding="10dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_margin="5dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="50dp"
            card_view:cardUsedCompatPadding="true"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/blanco"
            app:cardCornerRadius="12sp"
            app:cardElevation="5dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos de Aspirante:"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:textStyle="bold"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_nom"
                    android:inputType="text"
                    android:hint="Nombres:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_ape"
                    android:inputType="text"
                    android:hint="Apellidos:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_nacionalidad"
                    android:inputType="text"
                    android:hint="Nacionalidad:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Fecha de Nacimiento:"
                android:textColor="@color/blue"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:text=""
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/d_fecha_nac"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/d_fecha_nacimiento"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_calendario"
                    />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_residencia"
                    android:inputType="text"
                    android:hint="Lugar de Residencia:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"/>
            </android.support.design.widget.TextInputLayout>
           </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="50dp"
            card_view:cardUsedCompatPadding="true"
            android:layout_margin="6dp"
            android:backgroundTint="@color/blanco"
            app:cardCornerRadius="12sp"
            app:cardElevation="5dp"
            >
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos de Contacto:"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:textStyle="bold"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_telefono"
                    android:inputType="number"
                    android:hint="Telefono:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_email"
                    android:inputType="textEmailAddress"
                    android:hint="Correo:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_CLub_Proc"
                    android:inputType="text"
                    android:hint="Club de Procedencia:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_apoderado"
                    android:inputType="text"
                    android:hint="Datos de Apoderado:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_Liga"
                    android:inputType="text"
                    android:hint="Liga Actual:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_margin="2dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_categoria"
                    android:inputType="text"
                    android:hint="Categoria Actual:"
                    android:textColor="@color/colorPrimary"
                    android:textColorLink="@color/ColorPrimaryDark"
                    android:textAllCaps="true"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/blue"
                android:layout_margin="20dp"
                app:cardCornerRadius="10sp"
                app:cardElevation="5dp"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="REGISTRAR"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:onClick="guardar_deportista"/>

            </android.support.v7.widget.CardView>

         </LinearLayout>
        </android.support.v7.widget.CardView>
       </LinearLayout>
    </ScrollView>
</LinearLayout>
