<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanco"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_margin="10dp">


        <android.support.v7.widget.CardView
            android:id="@+id/op1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:backgroundTint="@color/red"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="20dp"
            android:elevation="5dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P"
                android:textColor="@color/blanco"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/op2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:backgroundTint="@color/blue"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="20dp"
            android:elevation="5dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R"
                android:textColor="@color/blanco"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/op3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/morado_bajo"
            android:backgroundTint="@color/morado_bajo"
            app:cardBackgroundColor="@color/morado_bajo"
            app:cardCornerRadius="20dp"
            android:elevation="5dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG"
                android:textColor="@color/blanco"
                android:textSize="25dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/op4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deep_naranja400"
            android:backgroundTint="@color/deep_naranja400"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/deep_naranja400"
            android:elevation="5dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DR"
                android:textColor="@color/blanco"
                android:textSize="25dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/op5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/verde_bajo"
            android:backgroundTint="@color/verde_bajo"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/verde_bajo"
            android:elevation="5dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G"
                android:textColor="@color/blanco"
                android:textSize="40dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</FrameLayout>