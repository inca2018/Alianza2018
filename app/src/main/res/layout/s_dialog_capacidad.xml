<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:gravity="center">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            tools:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_boton_volver_capa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:src="@drawable/ic_boton_regresar"
                    />
                <TextView
                    android:id="@+id/toolbar_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="EVALUACIÓN DE CAPACIDAD"
                    android:textSize="18dp"
                    android:textColor="@color/blanco"
                    android:gravity="left"
                    android:padding="10dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/toolbar_boton_vaciar_capa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:src="@drawable/ic_boton_vaciar_datos"
                    />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/deep_naranja400"
                android:backgroundTint="@color/deep_naranja400"
                app:cardCornerRadius="30dp"
                android:layout_margin="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contenido:"
            android:textColor="@color/blanco"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="0 Pts"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="1 Pts"
            android:textColor="@color/blanco"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2 Pts"
            android:textColor="@color/blanco"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="3 Pts"
            android:textColor="@color/blanco"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blanco"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1.- Percepción e Interpretación"
            android:textColor="@color/blanco"
            android:layout_weight="0.7"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:id="@+id/rg1capa">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa10"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa11"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa12"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa13"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2.- Toma de Decisiones"
            android:textColor="@color/blanco"
            android:layout_weight="0.7"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg2capa"
            android:layout_weight="4">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2capa0"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2capa1"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2capa2"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2capa3"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="3.- Inteligencia Táctica  Posicionamiento"
            android:textSize="12sp"
            android:textColor="@color/blanco"
            android:layout_weight="0.7"
            tools:ignore="HardcodedText" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg3capa"
            android:layout_weight="4">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa30"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa31"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa32"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa33"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="4.- Visíon de Juego"
            android:textColor="@color/blanco"
            android:layout_weight="0.7"
            android:textSize="12sp"
            android:gravity="center_vertical"
            tools:ignore="HardcodedText" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg4capa"
            android:layout_weight="4">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa40"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa41"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa42"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcapa43"
                android:layout_weight="0.01"
                android:buttonTint="@color/blanco"
                android:layout_marginRight="-30dp"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blanco"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/verde_bajo"
            android:backgroundTint="@color/verde_bajo"
            app:cardCornerRadius="15dp"
            android:layout_margin="2dp"
            app:cardElevation="4dp"
            android:layout_gravity="center">
        <Button
            android:id="@+id/btncapa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/guardar"
            android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            android:drawableRight="@drawable/ic_boton_guardar_datos"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="20dp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>