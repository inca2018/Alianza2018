<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/blanco"
    android:layout_margin="90dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/eve_titulo"
            android:text="titulo de evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/ColorAccent"
            android:elevation="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ColorAccent"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp">

        </LinearLayout>
        <TextView
            android:text="FECHAS DE CREACION"
            android:id="@+id/eve_fecha_creacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/negro"/>
        <TextView
            android:text="FECHA DE EJECUCION"
            android:id="@+id/eve_fecha_ejecucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/negro"/>
        <TextView
            android:text="CREADOR: JESUS INCA CARDENAS"
            android:id="@+id/eve_creador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/negro"/>
    </LinearLayout>

</android.support.v7.widget.CardView>