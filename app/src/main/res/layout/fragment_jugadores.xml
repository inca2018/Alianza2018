<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blanco"
    tools:context="inca.jesus.alianza17.Fragments.FragmentJugadores">

    <LinearLayout
        android:id="@+id/panel_juga_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_mant_juga">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/panel_juga_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blanco"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/fb"
            android:gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/boy"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:addStatesFromChildren="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Nombre de Jugador:"
                        android:layout_margin="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Fecha de Nacimiento:"
                        android:layout_margin="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Edad de Jugador:"
                        android:layout_margin="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"
                        android:inputType="number"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="DNI de Jugador:"
                        android:layout_margin="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"
                        android:inputType="number"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Nacionalidad de Jugador:"
                        android:layout_margin="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Domicilio de Jugador:"
                        android:layout_margin="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:gravity="fill_vertical"
                        android:text="Localidad de Jugador:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Telefono de Jugador:"
                        android:layout_margin="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"
                        android:inputType="number"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Email de Jugador:"
                        android:layout_margin="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="fill_vertical"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit2_jugador_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_margin="4dp"
                        android:inputType="text"
                        android:textAlignment="textStart" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edit2_jugador_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text=""
                            android:inputType="text"
                            android:layout_margin="4dp"
                            android:textAlignment="textStart"
                            android:enabled="false"/>
                        <ImageView
                            android:id="@+id/calendario"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:src="@mipmap/ic_calendario"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit2_jugador_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_margin="4dp"
                        android:inputType="number"
                        android:textAlignment="textStart" />
                    <EditText
                        android:id="@+id/edit2_jugador_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_margin="4dp"
                        android:inputType="number"
                        android:textAlignment="textStart" />
                    <EditText
                        android:id="@+id/edit2_jugador_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:inputType="text"
                        android:layout_margin="4dp"
                        android:textAlignment="textStart" />
                    <EditText
                        android:id="@+id/edit2_jugador_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:inputType="text"
                        android:layout_margin="4dp"
                        android:textAlignment="textStart" />
                    <EditText
                        android:id="@+id/edit2_jugador_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:inputType="text"
                        android:layout_margin="4dp"
                        android:textAlignment="textStart" />
                    <EditText
                        android:id="@+id/edit2_jugador_8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_margin="4dp"
